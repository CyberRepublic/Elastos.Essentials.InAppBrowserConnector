{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2020",
    "module": "es2020",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "isolatedModules": false,
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules",
      "./types"
    ],
    "types": [],
    "paths": {
      "@elastosfoundation/did-js-sdk": [
        "./node_modules/@elastosfoundation/did-js-sdk"
      ],
      "@elastosfoundation/elastos-connectivity-sdk-js": [
        "./node_modules/@elastosfoundation/elastos-connectivity-sdk-js"
      ]
    },
  },
  "include": [
    "src/**/*",
    "types"
  ],
  "exclude": [
    "node_modules/*",
    "dist/*"
  ]
}